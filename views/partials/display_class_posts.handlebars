<link rel="stylesheet" href="/public/styles/dashboard-right.css">

<a href="/class/{{classId}}" class='View'>View Class Page</a>
<a href="/post/new/{{classId}}" class='View'>Create New Post</a>
{{#if instructor}}
<a href="/class/edit/{{classId}}">Edit this class</a>
{{/if}}
{{#if postsExist }}
{{#if tags}}
<div id="class-tags">
        <h2>Tags</h2>

        {{#each tags}}
        <li class="class-tag"><a href="/class/{{{../classId}}}?tag={{{this}}}">{{{this}}}</a></li>
        {{/each}}
</div>
{{else}}
<p>There are no tags for this class.</p><!-- Feel free to change this -->
{{/if}}
{{#if filteredPostsExist}}
<ul class='post-list'>
        <h2>Posts</h2>

        {{#each data}}
        <li class="post" id="{{{ids}}}" style="background-color: white; overflow: hidden;">
                <div class="View2">
                        <a href="/post/{{ids}}" class="post-title">{{title}}</a>

                </div>
                <div class="desc">{{{body}}}</div>
                <div class="comments">
                        <ul>
                                {{#each comments}}
                                <li id="{{{_id}}}">
                                        {{{content}}} by {{{author}}} on {{{time_submitted}}}
                                        <span class="score" id="comment-score">{{{score}}}</span>
                                        {{#if ../../instructor}}
                                        {{#if endorse}}
                                        <button class='endorse-comment-button' id="unendorse">Un-endorse</button>
                                        {{else}}
                                        <button class='endorse-comment-button' id="endorse">Endorse</button>
                                        {{/if}}
                                        {{else}}
                                        {{#if upvoted}}
                                        <button class="vote-comment-button" id="unupvote"><img
                                                        src="../../public/img/full_like.svg"
                                                        class='like_button'></button>
                                        {{else}}
                                        <button class="vote-comment-button" id="upvote"><img
                                                        src="../../public/img/empty_like.svg"
                                                        class="like_button"></button>
                                        {{/if}}
                                        {{/if}}
                                </li>

                                {{/each}}
                        </ul>
                </div>
                <form class="comment-form" action="/api/comment" method="POST">
                        <input type="text" name="comment-content" id="comment-content">
                        <input type="hidden" name="parent-id" id="parent-id" value="{{{ids}}}">
                        <button type="submit">Post</button>
                </form>
                <div class="feedback" id="{{{ids}}}">
                        <span class="score" id="post-score">{{{score}}}</span>
                        {{#if ../instructor}}
                        {{#if endorse}}
                        <button class='endorse-button' id="unendorse">Un-endorse Post</button>
                        {{else}}
                        <button class='endorse-button' id="endorse">Endorse Post</button>
                        {{/if}}
                        {{else}}
                        {{#if upvoted}}
                        <button class="vote-button" id="unupvote">
                                <img src="../../public/img/full_like.svg" class="like_button">
                        </button>
                        {{else}}
                        <button class="vote-button" id="upvote">
                                <img src="../../public/img/empty_like.svg" class="like-button">
                        </button>
                        {{/if}}
                        {{/if}}
                </div>
        </li>
        {{/each}}
</ul>
{{else}}
<p>There are no posts matching the filter.</p>
{{/if}}
{{else}}
<p>Sorry, there are no posts currently available for this class. Make the first one!</p>
{{/if}}