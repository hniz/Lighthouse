{{#if error}}
<h1>Sorry, an error occurred</h1>
<h3>{{{error}}}</h3>
{{else}}
<h2>New Post for {{{class.name}}}</h2>
<form id="new-post-form" action="/post/new" method="POST">
    <label for="post-name">Post Title</label>
    <input type="text" name="post-name" id="post-name">
    <label for="post-description">Post Body</label>
    <input type="text" name="post-description" id="post-description">
    <label for="post-tags">Post tags</label>
    <input type="text" name="post-tags" id="post-tags">
    <input type="hidden" name="post-class" id="post-class" value={{{classID}}}>
    <div hidden id="similar-posts"></div>
    <button id="submit-post" type="submit">Post</button>
</form>
<p>To input tags, make sure each tag is seperated by a comma!</p>
<div id="new-post-error" hidden>
    <ul id="new-post-error-list">

    </ul>
</div>
{{/if}}
<script src="/public/js/scripts/new_post.js"></script>